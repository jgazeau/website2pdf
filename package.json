{
  "name": "website2pdf",
  "version": "0.0.16",
  "description": "Tool to export a website in PDFs based on its sitemap",
  "engines": {
    "node": ">=14.14.0"
  },
  "bin": {
    "website2pdf": "build/src/website2pdf.js"
  },
  "scripts": {
    "website2pdf": "ts-node src/website2pdf.ts",
    "test": "c8 --check-coverage mocha --recursive build/test/ --extension js",
    "mocha": "mocha --require ts-node/register --recursive test --extension ts",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "files": [
    "build/src",
    "CHANGELOG.md",
    "tsconfig.json",
    ".eslintrc.json",
    ".prettierrc.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jgazeau/website2pdf.git"
  },
  "keywords": [
    "crawler",
    "PDF",
    "generator"
  ],
  "author": "Jordan GAZEAU",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jgazeau/website2pdf/issues"
  },
  "homepage": "https://github.com/jgazeau/website2pdf#readme",
  "dependencies": {
    "@supercharge/promise-pool": "^3.1.0",
    "axios": "^1.6.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "fast-xml-parser": "^4.3.3",
    "fs-extra": "^11.1.1",
    "kleur": "^4.1.5",
    "pdf-merger-js": "^4.3.0",
    "puppeteer": "^21.5.1",
    "reflect-metadata": "^0.1.13",
    "table": "^6.8.1",
    "tslog": "^4.9.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^11.2.2",
    "@types/chai": "^4.3.10",
    "@types/chai-as-promised": "^7.1.8",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.9.2",
    "@types/sinon": "^17.0.1",
    "@types/sinon-chai": "^3.2.12",
    "@types/validator": "^13.11.7",
    "@types/yargs": "^17.0.32",
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "gts": "^5.2.0",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.5"
  }
}
